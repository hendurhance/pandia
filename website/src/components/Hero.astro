---
import MiniGraphVisualizer from './MiniGraphVisualizer.astro';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Background Effects -->
  <div class="absolute inset-0 bg-brand-darker">
    <!-- Gradient Orbs -->
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-brand-orange/20 rounded-full blur-3xl animate-pulse-glow"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-brand-purple/20 rounded-full blur-3xl animate-pulse-glow" style="animation-delay: 1.5s;"></div>

    <!-- Grid Pattern -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,.02)_1px,transparent_1px)] bg-[size:64px_64px]"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6 py-24 text-center">
    <!-- Badges -->
    <div class="flex flex-wrap items-center justify-center gap-3 mb-8 opacity-0 animate-slide-up">
      <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-brand-purple/20 rounded-full border border-brand-purple/40">
        <span class="text-xs font-semibold text-brand-purple uppercase tracking-wide">v0.1.0 Beta</span>
      </div>
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-brand-gray-dark/30 rounded-full border border-brand-gray-dark/50">
        <span class="w-2 h-2 bg-brand-orange rounded-full animate-pulse"></span>
        <span class="text-sm text-brand-gray">Open Source & Free Forever</span>
      </div>
    </div>

    <!-- Main Heading -->
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-extrabold text-white mb-6 opacity-0 animate-slide-up stagger-1">
      Visualize JSON
      <br />
      <span class="gradient-text">Like Never Before</span>
    </h1>

    <!-- Subheading -->
    <p class="text-xl md:text-2xl text-brand-gray max-w-3xl mx-auto mb-12 opacity-0 animate-slide-up stagger-2">
      Transform complex JSON data into beautiful, interactive diagrams.
      Navigate, explore, and understand your data structure instantly.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16 opacity-0 animate-slide-up stagger-3">
      <a
        href="#download"
        class="group flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-brand-orange to-brand-orange-dark text-white font-semibold rounded-xl hover:shadow-lg hover:shadow-brand-orange/25 transition-all"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        Download for Free
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
      <a
        href="/docs"
        class="flex items-center gap-2 px-8 py-4 bg-brand-gray-dark/30 text-white font-semibold rounded-xl border border-brand-gray-dark/50 hover:bg-brand-gray-dark/50 transition-all"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        Read the Docs
      </a>
    </div>

    <!-- Hero Image/Demo -->
    <div class="relative max-w-5xl mx-auto opacity-0 animate-slide-up stagger-4">
      <div class="gradient-border p-1 rounded-2xl glow-purple">
        <div class="bg-brand-dark rounded-xl overflow-hidden">
          <!-- Window Header -->
          <div class="flex items-center gap-2 px-4 py-3 bg-brand-darker border-b border-brand-gray-dark/30">
            <div class="flex gap-2">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
            <span class="ml-4 text-sm text-brand-gray">Pandia â€” JSON Visualization</span>
          </div>
          <!-- Interactive Graph Demo -->
          <div class="bg-brand-darker">
            <MiniGraphVisualizer />
          </div>
        </div>
      </div>

      <!-- Floating Elements -->
      <div class="absolute -top-6 -right-6 p-4 bg-brand-dark/90 backdrop-blur rounded-xl border border-brand-gray-dark/30 shadow-xl animate-float hidden lg:block">
        <code class="text-sm text-brand-purple font-mono">{'{ "users": 42 }'}</code>
      </div>
      <div class="absolute -bottom-6 -left-6 p-4 bg-brand-dark/90 backdrop-blur rounded-xl border border-brand-gray-dark/30 shadow-xl animate-float hidden lg:block" style="animation-delay: 2s;">
        <code class="text-sm text-brand-orange font-mono">$.data.users[0]</code>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-3 gap-8 max-w-2xl mx-auto mt-20 opacity-0 animate-slide-up stagger-5">
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-white">100%</div>
        <div class="text-brand-gray mt-1">Open Source</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-white">3</div>
        <div class="text-brand-gray mt-1">Platforms</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-white">&lt;10MB</div>
        <div class="text-brand-gray mt-1">App Size</div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-brand-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
