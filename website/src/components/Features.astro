---

<section id="features" class="relative py-32 bg-brand-dark">
  <!-- Background -->
  <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,.01)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,.01)_1px,transparent_1px)] bg-[size:64px_64px]"></div>

  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <span class="inline-block px-4 py-2 bg-brand-purple/10 text-brand-purple text-sm font-medium rounded-full mb-4">
        Features
      </span>
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Everything You Need to
        <br />
        <span class="gradient-text">Work with JSON</span>
      </h2>
      <p class="text-xl text-brand-gray max-w-2xl mx-auto">
        A complete toolkit for developers who work with JSON data. View, edit, transform, and share JSON with ease.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {features.map((feature, index) => (
        <div
          class="group p-6 bg-brand-darker rounded-2xl border border-brand-gray-dark/20 hover:border-brand-gray-dark/40 transition-all hover:-translate-y-1"
        >
          <div class={`inline-flex items-center justify-center w-12 h-12 rounded-xl mb-4 ${feature.color === 'orange' ? 'bg-brand-orange/10 text-brand-orange' : 'bg-brand-purple/10 text-brand-purple'}`}>
            <Fragment set:html={feature.icon} />
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">{feature.title}</h3>
          <p class="text-brand-gray text-sm leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
